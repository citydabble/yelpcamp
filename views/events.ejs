<% include partials/header %>




<div class="container">
   <header class="jumbotron">
      <div class="container">
         <h1>This is the Events Page</h1>
         <p>Handpicked Campgrounds</p>
         <p><a class="btn btn-primary btn-lg" href="events/new">Add New Event</a></p>
      </div>
   </header>

   <div class="row text-center" style="display:flex; flex-wrap: wrap;">
      <% events.forEach(function(event){ %>
         <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
               <img src="<%= event.image %>">
               <div class="caption">
                  <h4><%= event.name %> </h4>
               </div>
            </div>
         </div>
      <% }); %>
   </div>
</div>

<% include partials/footer %>
